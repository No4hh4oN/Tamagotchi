<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <view
        android:id="@+id/signupView"
        class="androidx.cardview.widget.CardView"
        android:layout_width="385dp"
        android:layout_height="650dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="35sp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/chab"
        android:text="키워줘! 삼콩"
        android:textColor="#252EFF"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/signupView"
        app:layout_constraintStart_toStartOf="@+id/signupView"
        app:layout_constraintTop_toTopOf="@+id/signupView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/scdream6"
        android:text="계정 생성"
        android:textColor="#252EFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/signupView"
        app:layout_constraintStart_toStartOf="@+id/signupView"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <EditText
        android:id="@+id/idView"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_background1"
        android:drawablePadding="5dp"
        android:fontFamily="@font/scdream6"
        android:inputType="textEmailAddress"
        android:paddingStart="110dp"
        android:textColor="#99000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/signupView"
        app:layout_constraintStart_toStartOf="@+id/signupView"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/emailHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디는 이메일 형식이어야합니다."
        android:textColor="#FF0000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/idView"
        app:layout_constraintStart_toStartOf="@+id/idView"
        android:layout_marginStart="8dp"/>

    <EditText
        android:id="@+id/passwordView2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background1"
        android:fontFamily="@font/scdream6"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingStart="110dp"
        android:textColor="#99000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/idView"
        app:layout_constraintTop_toBottomOf="@+id/emailHint" />

    <TextView
        android:id="@+id/passwordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호는 6자리 이상이어야합니다."
        android:textColor="#FF0000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/passwordView2"
        app:layout_constraintStart_toStartOf="@+id/passwordView2"
        android:layout_marginStart="8dp"/>

    <EditText
        android:id="@+id/pwcheckView"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background1"
        android:fontFamily="@font/scdream6"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingStart="110dp"
        android:textColor="#99000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/passwordView2"
        app:layout_constraintTop_toBottomOf="@+id/passwordHint" />

    <Button
        android:id="@+id/goselectcharacter"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/scdream6"
        android:text="삼콩이 선택"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:backgroundTint="#252EFF"
        app:layout_constraintEnd_toEndOf="@+id/pwcheckView"
        app:layout_constraintStart_toStartOf="@+id/pwcheckView"
        app:layout_constraintTop_toBottomOf="@+id/pwcheckView" />

    <TextView
        android:id="@+id/idtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="아이디"
        android:textColor="#B3000000"
        app:layout_constraintBottom_toBottomOf="@+id/idView"
        app:layout_constraintStart_toStartOf="@+id/idView"
        app:layout_constraintTop_toTopOf="@+id/idView" />

    <TextView
        android:id="@+id/passwordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="비밀번호"
        app:layout_constraintBottom_toBottomOf="@+id/passwordView2"
        app:layout_constraintStart_toStartOf="@+id/passwordView2"
        app:layout_constraintTop_toTopOf="@+id/passwordView2" />

    <TextView
        android:id="@+id/pwcheckText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="비밀번호 확인"
        app:layout_constraintBottom_toBottomOf="@+id/pwcheckView"
        app:layout_constraintStart_toStartOf="@+id/pwcheckView"
        app:layout_constraintTop_toTopOf="@+id/pwcheckView" />

</androidx.constraintlayout.widget.ConstraintLayout>

