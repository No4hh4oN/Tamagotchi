<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <view
        android:id="@+id/loginView"
        class="androidx.cardview.widget.CardView"
        android:layout_width="385dp"
        android:layout_height="650dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="35sp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/chab"
        android:text="키워줘! 삼콩"
        android:textColor="#252EFF"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/loginView"
        app:layout_constraintStart_toStartOf="@+id/loginView"
        app:layout_constraintTop_toTopOf="@+id/loginView" />


    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/scdream6"
        android:text="로그인"
        android:textColor="#252EFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/loginView"
        app:layout_constraintStart_toStartOf="@+id/loginView"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <EditText
        android:id="@+id/idView"
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background1"
        android:fontFamily="@font/scdream6"
        android:hint="이메일 형식의 아이디 입력"
        android:inputType="text"
        android:padding="5dp"
        android:paddingStart="110dp"
        android:textColor="#99000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/loginView"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/loginView"
        app:layout_constraintTop_toBottomOf="@+id/loginText" />

    <TextView
        android:id="@+id/idtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="아이디"
        android:textColor="#B3000000"
        app:layout_constraintBottom_toBottomOf="@+id/idView"
        app:layout_constraintStart_toStartOf="@+id/idView"
        app:layout_constraintTop_toTopOf="@+id/idView" />

    <EditText
        android:id="@+id/passwordView"
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background1"
        android:fontFamily="@font/scdream6"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingStart="110dp"
        android:textColor="#99000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/idView"
        app:layout_constraintTop_toBottomOf="@+id/idView" />

    <TextView
        android:id="@+id/passwordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="비밀번호"
        app:layout_constraintBottom_toBottomOf="@+id/passwordView"
        app:layout_constraintStart_toStartOf="@+id/passwordView"
        app:layout_constraintTop_toTopOf="@+id/passwordView" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/scdream6"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:backgroundTint="#252EFF"
        app:layout_constraintEnd_toEndOf="@+id/passwordView"
        app:layout_constraintTop_toBottomOf="@+id/passwordView" />

    <TextView
        android:id="@+id/asksignuptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="215dp"
        android:fontFamily="@font/scdream6"
        android:text="계정이 없으신가요?"
        app:layout_constraintStart_toStartOf="@+id/passwordView"
        app:layout_constraintTop_toBottomOf="@+id/passwordView" />

    <TextView
        android:id="@+id/gosignup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/scdream6"
        android:text="계정 생성"
        android:textColor="#0C21C1"
        app:layout_constraintBottom_toBottomOf="@+id/asksignuptext"
        app:layout_constraintStart_toEndOf="@+id/asksignuptext"
        app:layout_constraintTop_toTopOf="@+id/asksignuptext" />


</androidx.constraintlayout.widget.ConstraintLayout>
